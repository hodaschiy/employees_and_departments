@model IEnumerable<WebApp.Models.DepartmentSimpleView>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiefId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="padding-left: @(@item.Level*15)px">@item.Name</td>
            <td>@item.ChiefName</td>
            <td>@item.Tree</td>
            <td>@item.ParentName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
